<% unless current_user? @user %>
  <ul class="rating-form">
    <%= render "ratings/form" %>
  </ul>
  <%= link_to(new_order_path(user_id: @user.id), {"data-toggle": "modal", "data-target": "#myModalBooking"}, remote: true) do %>
    <h4><button type="button" class="btn btn-primary"><%= t ".booking" %></button></h4>
  <% end %>
<% end %>

<div id="myModalBooking" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= render "orders/modal" %>
    </div>
  </div>
</div>
