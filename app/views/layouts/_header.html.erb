<header>
  <div class="navbar navbar-fixed-top navbar-light">
    <div class="container">
      <div class="navbar-header">
        <%= link_to t(".title"), "#", class: "navbar-brand" %>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-right navbar-nav">
          <% if logged_in? %>
            <li class="dropdown">  
              <%= link_to "#", :class => "dropdown-toggle", :data => { :toggle => "dropdown"} do %>
                <%= t".wellcome" %> <%= current_user.name %> <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li> <%= link_to t(".logout"), logout_path, method: :delete %> </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to t(".login"), login_path %></li>
          <% end %>
        </ul>
      </div>		
    </div>
  </div>
</header>
